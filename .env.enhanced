# Enhanced OpenAPI to WireMock Generator Configuration

# Status codes to generate mappings for
# You can modify this list to include/exclude specific status codes
STATUS_CODES=200,201,401,403,404,500,502,503

# Request/Response Configuration
GENERATE_REQUEST_EXAMPLES=true
GENERATE_DETAILED_ERRORS=true
INCLUDE_HEADERS=true
ENABLE_SCENARIOS=true

# Mapping Configuration
MAPPING_PRIORITY_SUCCESS=1
MAPPING_PRIORITY_ERROR=5
GENERATE_DOCUMENTATION=true

# Response Body Configuration
USE_SCHEMA_EXAMPLES=true
FALLBACK_TO_GENERATED=true
PRETTY_PRINT_JSON=true

# Error Response Configuration
INCLUDE_TRACE_ID=true
INCLUDE_TIMESTAMP=true
INCLUDE_ERROR_DETAILS=true

# Advanced Features
ENABLE_REQUEST_MATCHING=true
ENABLE_SCENARIO_HEADERS=true
ENABLE_RETRY_HEADERS=true
ENABLE_AUTH_HEADERS=true
