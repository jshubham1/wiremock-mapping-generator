# WireMock Multi-Spec Configuration
# Consolidated environment variables for all use cases

# WireMock Server Configuration
WIREMOCK_PORT=8080
WIREMOCK_OPTIONS=--global-response-templating --verbose

# OpenAPI Spec Configuration
OPENAPI_SPEC_FILE=open-api-spec.yaml

# Output Configuration
MAPPINGS_DIR=./generated/wiremock/mappings
FILES_DIR=./generated/wiremock/__files

# Generator Configuration
GENERATE_RESPONSES=true
RESPONSE_TEMPLATING=true
DEFAULT_RESPONSE_STATUS=200

# Status codes to generate mappings for
STATUS_CODES=200,201,401,403,404,500,502,503

# Request/Response Configuration
GENERATE_REQUEST_EXAMPLES=true
GENERATE_DETAILED_ERRORS=true
INCLUDE_HEADERS=true
ENABLE_SCENARIOS=true

# Mapping Configuration
MAPPING_PRIORITY_SUCCESS=1
MAPPING_PRIORITY_ERROR=5
GENERATE_DOCUMENTATION=true

# Response Body Configuration
USE_SCHEMA_EXAMPLES=true
FALLBACK_TO_GENERATED=true

# Environment Presets (uncomment to use)
# Development
# WIREMOCK_OPTIONS=--global-response-templating --verbose --enable-browser-proxying

# Testing/CI
# WIREMOCK_OPTIONS=--global-response-templating --quiet --disable-banner

# Production
# WIREMOCK_OPTIONS=--global-response-templating --no-request-journal
